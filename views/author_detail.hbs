<div class='col-sm-10 ' style="background-color: #dfe6e3;">
             <span style = "visibility:hidden;">{{data}}</span> 
            <h1 class  = "text-success">Author: {{author.name}}</h1>
                         
            <p class = "text-dark font-italic font-weight-bolder">{{author.date_of_birth_formatted}}-{{author.date_of_death_formatted}}</p>
            <a  class = "btn btn-success" href = {{author.updateUrl}}>Update Author</a> 
              <a class = "btn btn-danger" href = {{author.fullUrl}}>Delete Author</a>
    

 {{#if author_books.length}}
 <table class="table table-dark">
  <thead>
    <tr>
      
      <th scope="col">Book Name</th>
      <th scope="col">Book Description</th>
    </tr>
  </thead>
  <tbody>
        {{#each author_books}}
    <tr>
      
      <td><h5><a class = "text-success" href = {{this.url}}>{{this.title}} </a></h5></td>
      <td> <p>{{this.summary}}</p></td>
      
    </tr>
     {{/each}}
           {{else}}
                <p class = "lead">This author has no books!!</p>
               
      {{/if}}
  </tbody>
</table>
</div>
</body>
