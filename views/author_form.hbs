<div class='col-sm-10'>
             <span style = "visibility:hidden;">{{data}}</span> 
            <h1 >TITLE: {{title}}</h1>
         <form method ="POST" action =''>
             <div class='form-group'>
                 <lable for ='first_name'>First Name:</lable>
                 <input id="first_name" class='form-control' type ="text" placeholder="First Name" name ='first_name' required='true'>
                 <lable for ='family_name'>Family Name:</lable>
                 <input id="family_name" class='form-control' type ="text" placeholder="Family Name (surName)" name ='family_name' required='true'>
                  <lable for ='date_of_birth'>Date of Birth:</lable>
                   <input id="date_of_birth" class='form-control' type ="date" name ='date_of_birth'>
                   <lable for ='date_of_death'>Date of Death:</lable>
                   <input id="date_of_death" class='form-control' type ="date" name ='date_of_death'>
                    <button type = 'submit' class="btn btn-primary">Submit</button>

             </div>
         </form>
           {{#if errors}}
           {{#each errors}}
           <li>{{this.msg}}</li>
           {{/each}}
           {{/if}}
            </div>  
        </div>
    </div>
</body>



