<div class="jumbotron">
  <h1 class="display-4">Below are the List of Authors</h1>
  <p class="lead">You can view complete Author details by clicking on Author.</p>
  <hr class="my-4">
        <table class="table table-dark">
  <thead>
    <tr>
      
      <th scope="col">Author Name</th>
      <th scope="col">Date Of Birth</th>
    </tr>
  </thead>
  <tbody>
        {{#each data}}
    <tr>
      <td>  <a class = "text-success" href = {{this.url}}>{{this.name}}</a></li></td>
            <td>
            {{# if this.date_of_death}}
                    {{this.date_of_birth_formatted}} <span>-</span>{{this.date_of_death_formatted}}      
                {{else}}
              {{this.date_of_birth_formatted}} <span>-</span>present
                {{/if}} </td>
      
    </tr>
       {{/each}}
  </tbody>
</table>
</div>

