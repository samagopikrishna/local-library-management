    <div class='col-sm-10'>
            <form method='POST' action=''>
               <div class="form-group">
                     <label for='book'><b>Book:</b></label>
                     <select name='book' class='form-control' id='book' placeholder='Select book'  required='true'>
                        {{#each book}}
                        
                            <option value ='{{this._id}}'  {{#if (ifEquality ../bookInstance.book this._id)}}selected{{/if}}>{{this.title}}</option>
                        {{/each}}
                    </select>
                   <lable for="imprint"><b>Imprint:</b></lable>
                    <input id='imprint'class='form-control'  name='imprint' placeholder="Name of the imprint" type='text' required='true' style="width:1100px;" value = '{{bookInstance.imprint}}'>
                    <lable for ='date'><b>Date when book available:</b></lable> 
                    <input id='date' name='date' placeholder="date" type='text' required='true' style="width:1100px;" value = '{{bookInstance.due_back_formatted}}'/>  <br>
                     <lable for='status'><b>Status</b></lable>
                    <select name='status' class='form-control' id='status' placeholder='Select satus'  required='true'>
                        {{#each status}}
                            <option value ='{{this.name}}'  {{#if (ifEquality ../bookInstance.status this.name)}}selected{{/if}}>{{this.name}}</option>
                        {{/each}}
                    </select>
                    <button type = 'submit' class="btn btn-primary">Submit</button>
               </div>
           </form>
            {{#if errors}}
           {{#each errors}}
           <li>{{this.msg}}</li>
           {{/each}}
           {{/if}}  
            </div>
        </div>
    </div>